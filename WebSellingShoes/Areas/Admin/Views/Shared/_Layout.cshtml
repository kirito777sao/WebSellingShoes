            }
        });
    </script>

    <!-- Script to Handle Sidebar Active State -->
    <script>
        $(document).ready(function () {
            // Get all sidebar links
            const sidebarLinks = $('.sidebar .nav-link');

            // Function to set the active state based on the current URL
            function setActiveLink() {
                // Extract the controller from the current URL
                let path = window.location.pathname; // e.g., "/Dashboard" or "/Dashboard/Index"
                let currentController = path.split('/')[1] || 'Home'; // Default to 'Home' if empty

                // Remove any trailing "Index" or other action names
                if (currentController.includes('Index')) {
                    currentController = currentController.replace('Index', '');
                }

                // Remove any leading/trailing slashes and normalize
                currentController = currentController.replace(/^\/|\/$/g, '');

                // Get the stored active link from localStorage
                let activeLink = localStorage.getItem('activeLink') || currentController;

                // Set the active class based on the current controller
                sidebarLinks.each(function () {
                    const controller = $(this).attr('asp-controller');
                    if (controller && controller.toLowerCase() === currentController.toLowerCase()) {
                        sidebarLinks.removeClass('active'); // Remove active from all links
                        $(this).addClass('active'); // Add active to the matching link
                        localStorage.setItem('activeLink', controller); // Store the controller
                    }
                });
            }

            // Run on page load
            setActiveLink();

            // Handle click events on sidebar links
            sidebarLinks.on('click', function (e) {
                // Remove active class from all links
                sidebarLinks.removeClass('active');

                // Add active class to the clicked link
                $(this).addClass('active');

                // Store the controller of the clicked link in localStorage
                const controller = $(this).attr('asp-controller');
                if (controller) {
                    localStorage.setItem('activeLink', controller);
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
