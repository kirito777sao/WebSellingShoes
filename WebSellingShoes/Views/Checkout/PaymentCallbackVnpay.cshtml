@model PaymentResponseModel

@{
    ViewData["Title"] = "Kết quả giao dịch thanh toán VnPay";
    decimal finalPrice = ViewData["FinalPrice"] != null ? (decimal)ViewData["FinalPrice"] : 0;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h2 class="text-center">Thanh toán VnPay thành công</h2>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h5><strong>Thông tin đơn hàng:</strong> @Model.OrderDescription</h5>
                    </div>
                    <div class="mb-3">
                        <h5><strong>Tổng tiền:</strong> @finalPrice.ToString("#,##0 VNĐ")</h5>
                    </div>
                    <div class="mb-3">
                        <h5><strong>Mã giao dịch:</strong> @Model.TransactionId</h5>
                    </div>
                    <div class="mb-3">
                        <h5><strong>Mã thanh toán:</strong> @Model.PaymentId</h5>
                    </div>
                    <div class="text-center">
                        <a asp-controller="Account" asp-action="History" class="btn btn-primary">Xem lịch sử đơn hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>