@model ContactModel

<div class="container py-5">
    <h1 class="text-center mb-4">Liên Hệ Với Chúng Tôi</h1>
    <div class="row g-4">
        <!-- Cột 1: Bản đồ và mô tả -->
        <div class="col-lg-5 col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    @Html.Raw(@Model.Map)
                    <div class="mt-3">
                        @Html.Raw(Model.Description)
                    </div>
                </div>
            </div>
        </div>

        <!-- Cột 2: Thông tin liên hệ -->
        <div class="col-lg-3 col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Thông Tin Liên Hệ</h5>
                    <ul class="list-unstyled">
                        <li><strong>Tên:</strong> @Model.Name</li>
                        <li><strong>Email:</strong> <a href="mailto:@Model.Email">@Model.Email</a></li>
                        <li><strong>Điện thoại:</strong> @Model.Phone</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Cột 3: Widget Facebook -->
        <div class="col-lg-4 col-md-12">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Kết Nối Với Chúng Tôi</h5>
                    <div class="fb-page"
                         data-href="https://www.facebook.com/divineshop.vn"
                         data-tabs="message"
                         data-width="100%" data-height=""
                         data-small-header="false"
                         data-adapt-container-width="true"
                         data-hide-cover="false"
                         data-show-facepile="true">
                        <blockquote cite="https://www.facebook.com/Daihoc.uneti" class="fb-xfbml-parse-ignore">
                            <a href="https://www.facebook.com/Daihoc.uneti">Trường Đại học Kinh tế - Kỹ thuật Công nghiệp UNETI</a>
                        </blockquote>
                        <div class="fb-page" data-href="https://www.facebook.com/Daihoc.uneti" data-tabs="mess" data-width="" data-height="" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
                            <blockquote cite="https://www.facebook.com/Daihoc.uneti" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/Daihoc.uneti">Trường Đại học Kinh tế - Kỹ thuật Công nghiệp UNETI</a></blockquote>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    .card {
        border: none;
        border-radius: 10px;
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
    }

    .list-unstyled li {
        margin-bottom: 10px;
        font-size: 1rem;
    }

    .fb-page {
        width: 100%;
    }
    media (max-width: 768px) {
        .card-body

    {
        padding: 1rem;
    }

    }
</style>

<!-- Script để tải Facebook SDK -->
@section Scripts {
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous"
            src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v20.0"
            nonce="YOUR_NONCE"></script>
}